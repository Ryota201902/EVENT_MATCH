<!DOCTYPE html>
<html>
  <head>
    <title>EventMatch</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header">
      <div class="logo"><%= link_to "Event Match",root_path, class: "header_logo" %></div>
      <nav>
        <ul>
          <% if user_signed_in? %>
            <li><%= link_to "イベント一覧", events_path, class: "header_item" %></li>
            <li><%= link_to "イベント募集", new_event_path, class: "header_item" %></li>
            <li><%= link_to "マイページ", user_path(current_user.id), class: "header_item" %></li>
            <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "header_item" %></li>
          <% else %>
            <li><%= link_to "新規会員登録", new_user_registration_path, class: "header_item" %></li>
            <li><%= link_to "ログイン", new_user_session_path, class: "header_item" %></li>
          <% end %>
        </ul>
      </nav>
    </div>
    <%= yield %>
  </body>
</html>
