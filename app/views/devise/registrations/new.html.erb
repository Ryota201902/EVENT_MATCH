<div class="sign_up_page">
  <div class="sign_page">
    <div class="registration_form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.text_field :name, autofocus: true, :placeholder => "名前を入力", class: "field_sign" %>
        </div>

        <div class="field">
          <%= f.email_field :email, autocomplete: "email", :placeholder => "メールアドレスを入力", class: "field_sign" %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "new-password", :placeholder => "パスワードを入力(6文字以上)", class: "field_sign" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "確認パスワードを入力", class: "field_sign" %>
        </div>

        <div class="actions">
          <%= f.submit "登録", class: "sign_btn" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
