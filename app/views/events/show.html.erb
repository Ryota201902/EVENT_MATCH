<div class="event_show">
	<p><%= attachment_image_tag @event, :event_image, :fill, 200, 100, format: 'jpeg' %></p>
	<p>説明 : <%= @event.description %></p>
	<p>タイトル : <%= @event.title %></p>
	<p>日程 : <%= @event.date %></p>
	<p>場所 : <%= @event.place %></p>
	<p>参加人数 : <%= @event.participates.count %>/<%= @event.capacity %>名</p>
	<p><%= @event.created_at.strftime('%Y/%m/%d') %></p>
	<% if @event.participated_by?(current_user) %>
		<%= link_to "参加取消", event_participates_path(@event), method: :delete %>
	<% end %>

	<div class="comments">
		<% @event.post_comments.each do |post_comment| %>
		  <p><%= link_to user_path(post_comment.user) do %><%= attachment_image_tag post_comment.user, :profile_image,:fill, 60, 60, fallback: "no_image.jpeg" %>
		  	<% end %>
		  	<%= post_comment.user.name %>
		  <%= post_comment.created_at.strftime('%Y/%m/%d')%>
		  <%= post_comment.comment %></p>
		<% end %>
	</div>
	<div class="comment_form">
		<%= form_for [@event, @post_comment] do |f| %>
		  <%= f.text_field :comment %>
		  <%= f.submit %>
		<% end %>
	</div>
</div>

