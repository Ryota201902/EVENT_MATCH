<div class="event_index">
	<div class="ransack">
		<%= search_form_for @search do |f| %>
			<%= f.search_field :title_cont, :placeholder => "キーワードを入力", class: "search_form" %>
			<%= f.submit %>
		<% end %>
	</div>
	<% @events.each do |event| %>
		<div class="event_box">
			 <%= attachment_image_tag event, :event_image,:fill, 325, 210, format:'jpeg' %>
			 <p>タイトル : <%= event.title %></p>
			 <p>日程 : <%= event.date %></p>
			 <p>場所 : <%= event.place %></p>
			 <p>定員 : <%= event.capacity %>人</p>

			 <div class="participate">
			   	 <% if event.user.id == current_user.id %>
			   	   <div class ="participate_btn_host"><%= link_to "トークルームへ", event_path(event)%></div>
			   	   <p><%= event.participates.count %>人参加</p>
				 <% elsif event.participated_by?(current_user) %>
				   <%= link_to event_participates_path(event), method: :delete do %>
				     <div class="participate_btn_true"><%= link_to "トークルームへ", event_path(event.id) %></div>
				   <% end %>
				   <%= event.participates.count %>人参加
				 <% elsif event.capacity <= event.participates.count %>
				   <div class="capacity_max">満員</div>
				 <% else %>
				   <%= link_to event_participates_path(event), method: :post do %>
				     <div class="participate_btn_false">参加</div>
				   <% end %>
				   <%= event.participates.count %>人参加
				 <% end %>
			 </div>
		</div>
	<% end %>
</div>