<div class="event_new">
	<%= form_for (@event) do |f| %>
	  <% if @event.errors.any? %>
		<%= @event.errors.count %>のエラーが発生しました
		<%= @event.errors.full_messages.each do |message| %>
			<%= message %>
		<% end%>
	  <% end %>

	  <p><%= f.attachment_field :event_image %></p>
	  <p><%= f.text_field :title, :placeholder => "タイトル" %></p>
	  <p><%= f.date_field :date, :placeholder => "日程" %></p>
	  <p><%= f.text_field :place, :placeholder => "場所" %></p>
	  <p><%= f.number_field :capacity, :placeholder => "定員" %></p>
	  <p><%= f.text_area :description, :placeholder => "説明" %></p>
	  <p><%= f.submit %></p>
	  <a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-size="large" data-text="一緒にイベントに参加しましょう！" data-url="http://localhost:3000/events" data-hashtags="Event_Match" data-lang="ja" data-show-count="false">Tweet</a><script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
	<% end %>
</div>